extends base

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Old Password", name="oldPW", type="password")
        input(placeholder="New Password", name="newPW", type="password")
        input(placeholder="New Password Confirmation", name="newPWconfirmation", type="password")
        input(value="Change Password", type="submit")
